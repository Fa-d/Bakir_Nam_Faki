<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hour_line"
            android:orientation="horizontal"
            android:weightSum="7">

            <ProgressBar
                android:id="@+id/progressBarSu"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="0" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="90" />

            <ProgressBar
                android:id="@+id/progressBarT"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="60" />

            <ProgressBar
                android:id="@+id/progressBarW"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="80" />

            <ProgressBar
                android:id="@+id/progressBarTH"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="30" />

            <ProgressBar
                android:id="@+id/progressBarF"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="80" />

            <ProgressBar
                android:id="@+id/progressBarS"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                tools:progress="10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/StDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="S" />

            <TextView
                android:id="@+id/MDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="M" />

            <TextView
                android:id="@+id/TDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="T" />

            <TextView
                android:id="@+id/WDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="W" />

            <TextView
                android:id="@+id/THDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="T" />

            <TextView
                android:id="@+id/FDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="F" />


            <TextView
                android:id="@+id/SDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="S" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24 h" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18 h" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12 h" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6 h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 h" />

    </LinearLayout>

</LinearLayout>