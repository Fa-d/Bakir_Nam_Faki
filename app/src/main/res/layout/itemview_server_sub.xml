<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/flagIm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:scaleX=".8"
        android:scaleY=".8"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="France"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flagIm"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:src="@drawable/favorite"
        app:layout_constraintBottom_toBottomOf="@+id/radionIcon"
        app:layout_constraintEnd_toStartOf="@+id/radionIcon"
        app:layout_constraintTop_toTopOf="@+id/radionIcon" />

    <RadioButton
        android:id="@+id/radionIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/radio_flat_selector"
        android:button="@android:color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:maxWidth="0dp"
        android:maxHeight="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagIm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flagIm" />
</androidx.constraintlayout.widget.ConstraintLayout>