<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_nav"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kolpolok.nord.ui.dashboard.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_servers"
        android:name="com.kolpolok.nord.ui.dashboard.StatusFragment"
        android:label="fragment_status"
        tools:layout="@layout/fragment_status" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.kolpolok.nord.ui.dashboard.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.kolpolok.nord.ui.dashboard.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <dialog
        android:id="@+id/serverSelectionBottomSheet"
        android:name="com.kolpolok.nord.ui.dashboard.bottomsheet.ServerSelectionBottomSheet"
        android:label="fragment_bottomsheet_servers_selection"
        tools:layout="@layout/fragment_bottomsheet_servers_selection" />
</navigation>